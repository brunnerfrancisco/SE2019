
module BCD2HEX(entrada, salida);

	input [3:0] entrada;
	output [6:0] salida;
	
	reg [6:0] salida;
	
	always @(entrada)
	begin
	
		case (entrada)
			4'b0000 : 
				begin
					salida = 7'b0111111;
				end
			4'b0001 : 
				begin
					salida = 7'b0000110;
				end
			4'b0010 : 
				begin
					salida = 7'b1011011;
				end
			4'b0011 : 
				begin
					salida = 7'b1001111;
				end
			4'b0100 : 
				begin
					salida = 7'b1100110;
				end
			4'b0101 : begin
					salida = 7'b1101101;
				end
			4'b0110 : 
				begin
					salida = 7'b1111101;
				end
			4'b0111 : 
				begin
					salida = 7'b0000111;
				end
			4'b1000 : 
				begin
					salida = 7'b1111111;
				end
			4'b1001 : 
				begin
					salida = 7'b1101111;
				end
		endcase
	
	end

endmodule
